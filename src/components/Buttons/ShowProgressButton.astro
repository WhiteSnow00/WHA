---
import ToggleButtonAndDescriptionWrapper from "./Template/ToggleButtonAndDescriptionWrapper.astro";
---

<ToggleButtonAndDescriptionWrapper
  id="show-progress-bar-btn"
  buttonDescription="Show Progress"
/>

<script is:inline>
  const toggle = document.getElementById("show-progress-bar-btn");
  function ChangeProgressBarVisibility(visible) {
    let progressBar = document.getElementById("progress-bar-container");
    console.log(progressBar);

    progressBar?.classList.remove(visible ? "enable" : "disable");
    progressBar?.classList.add(!visible ? "enable" : "disable");
  }

  console.log(toggle);
  toggle?.addEventListener("change", () => {
    const checked = toggle.checked;
    console.log(checked);
    ChangeProgressBarVisibility(!checked);
  });
</script>
