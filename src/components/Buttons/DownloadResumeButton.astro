---
import { Download } from "lucide-astro";
import { ResumeHRef } from "@lib/References/DownloadResumeHref";
import ButtonAndDescriptionWrapper from "./Template/ButtonAndDescriptionWrapper.astro";
---

<a href={ResumeHRef} rel="nofollow" download="file" class="w-full">
  <ButtonAndDescriptionWrapper
    id="down-resume-btn"
    buttonDescription="Download Resume"
  >
    <Download
      slot="icon"
      class="size-6 transition-colors duration-300 ease-in-out group-hover:animate-pulse group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black group-hover:dark:stroke-white dark:group-focus-visible:stroke-white"
    />
  </ButtonAndDescriptionWrapper>
</a>
